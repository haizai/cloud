<!DOCTYPE html>
<html>
<head>
	<%- include('head', {title: title}); %>
</head>
<body>
	<div id='app'>
		<h1><%- title %></h1>
	</div>

	<input type="text" id="keyword"><input type="button" id="submit" value="搜索"> <br>
  page: <input type="text" id="page"><br>
	range: <input type="text" id="range"><br>

	<script src='js/jquery-3.1.1.min.js'></script>
	<script>
		jQuery(function($) {
			$('#submit').on('click', function() {
				$.ajax({
					url: 'ajax/animes',
					data: {
						keyword: $('#keyword').val(),
						page: +$('#page').val(),
            range: $('#range').val()
					},
					success: function(data) {
						console.log(data)
					}
				})
			})
		})
	</script>
</body>
</html>
